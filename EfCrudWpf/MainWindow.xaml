<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EfCrudWpf"
        xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking" x:Class="MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,23,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="415*"/>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <Label Content="İsim" HorizontalAlignment="Left" Margin="34,43,0,0" VerticalAlignment="Top" Width="65" FontFamily="Arial" FontSize="14"/>
        <Label Content="Soyisim" HorizontalAlignment="Left" Margin="34,103,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.944,2.761" Width="62" FontSize="14" FontFamily="Arial"/>
        <Label Content="Yaş&#x9;" HorizontalAlignment="Left" Margin="34,167,0,0" VerticalAlignment="Top" Width="61" FontSize="14" FontFamily="Arial"/>
        <Label Content="Cinsiyet&#x9;" HorizontalAlignment="Left" Margin="34,217,0,0" VerticalAlignment="Top" Width="70" FontSize="14" FontFamily="Arial" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.066"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <TextBox x:Name="name_txt" HorizontalAlignment="Left" Margin="142,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_2" />
        <ComboBox x:Name="gender_txt"   HorizontalAlignment="Left" Margin="142,214,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Erkek" IsSelected="True"/>
            <ComboBoxItem Content="Kadın"/>
        </ComboBox>
        <TextBox x:Name="lastName_txt" HorizontalAlignment="Left" Margin="141,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_2" RenderTransformOrigin="0.51,2.106"/>
        <TextBox x:Name="age_txt" HorizontalAlignment="Left" Margin="141,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged_2"/>
        <Button x:Name="addButton" Content="Ekle" HorizontalAlignment="Left" Margin="44,314,0,0" VerticalAlignment="Top" FontFamily="Arial" Height="33" Width="65" Background="#FFB2EFF4" Foreground="#FF121111" RenderTransformOrigin="0.5,0.5" FontSize="14" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="2.987"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.548"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="clearButton" Content="Temizle" HorizontalAlignment="Left" Margin="440,310,0,0" VerticalAlignment="Top" FontFamily="Arial" Width="95" Height="35" Background="#FFEDE0E3" FontSize="14" RenderTransformOrigin="0.625,1.71"/>
        <Button x:Name="deleteButton" Content="Sil" HorizontalAlignment="Left" Margin="308,313,0,0" VerticalAlignment="Top" Width="73" Background="#FFEB2929" Height="33" FontSize="14"/>
        <Button x:Name="updateButton" Content="Güncelle&#x9;" HorizontalAlignment="Left" Margin="165,313,0,0" VerticalAlignment="Top" Width="95" Background="#FF3BD227" Height="33" FontSize="14"/>
        <DataGrid x:Name="dataGrid" Margin="348,52,88,190" SelectionChanged="DataGrid_SelectionChanged_1" Background="#FF6DD1F3"/>
    </Grid>
</Window>
